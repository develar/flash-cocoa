<?xml version="1.0"?>
<WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns="library://ns.adobe.com/flex/spark"
					 xmlns:f="http://thewebproduction.com/flexLibrary"
					 backgroundAlpha="0" showStatusBar="false" creationPolicy="none" width="600" height="600"
					 creationComplete="creationCompleteHandler()">

	<fx:Script><![CDATA[
		import cocoa.plaf.PopUpButtonSkin;
		import cocoa.plaf.PopUpButtonSkin;
		import cocoa.plaf.aqua.PushButtonSkin;
		import cocoa.plaf.aqua.PushButtonSkin;

		import org.flyti.util.ArrayList;

		use namespace mx_internal;

		private static const testData:ArrayList = new ArrayList(new <Object>["Item 1", "Item 2", "Item 3"]);
		private static const testDataWithLongLabels:ArrayList = new ArrayList(new <Object>["Short Label", "Item 2", "Loooooooooong Item Label"]);

		private function creationCompleteHandler():void
		{
			var testContainer:Sprite = new Sprite();
			$addChild(testContainer);
			testContainer.x = 400;
			new Builder().build(testContainer);

			createDeferredContent();


		}
		]]></fx:Script>

	<Rect left="0" right="0" top="0" bottom="0">
		<stroke>
			<SolidColorStroke color="0xcccccc"/>
		</stroke>
		<fill>
			<SolidColor alpha="0"/>
		</fill>
	</Rect>
	<VGroup left="100" top="100" right="100" bottom="100">
		<f:PushButton label="Help H" skinClass="{PushButtonSkin}"/>
		<f:PushButton label="Textured Rounded" skinClass="{PushButtonSkin}" bezel="texturedRounded"/>
		
		<f:PopUpButton skinClass="{PopUpButtonSkin}" dataProvider="{testData}"/>
		<f:PopUpButton skinClass="{PopUpButtonSkin}" dataProvider="{testDataWithLongLabels}"/>

		<DropDownList dataProvider="{testData}"/>
	</VGroup>
</WindowedApplication>