<?xml version="1.0" ?>
<Container xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns="cocoa" xmlns:s="library://ns.adobe.com/flex/spark">
	<layout>
		<s:VerticalLayout/>
	</layout>

	<fx:Script><![CDATA[
		import cocoa.MenuItem;

		import org.flyti.util.ArrayList;

		private static const testData2:ArrayList = new ArrayList(new <Object>["Grid", "Mosaic", MenuItem.createSeparatorItem(), "Carousel"]);
		]]></fx:Script>

	<Label text="URL"/>
	<Container width="100%">
		<layout>
			<s:HorizontalLayout gap="12"/>
		</layout>
		<TextInput id="feedURITextInput" width="100%"/>
		<PushButton label="Apply"/>
	</Container>

	<HSeparator/>

	<Container>
		<layout>
			<CenterEqualizedLayout/>
		</layout>

		<CheckBox id="showDateCheckBox" label="Show Date"/>

		<Label text="Article Length:"/>
		<HSlider id="articleLengthSlider" value="0.5"/>

		<Label text="Photo Size:"/>
		<HSlider id="photoSizeSlider" value="1"/>
		
		<Label text="Number of Entries:"/>
		<NumericStepper id="numberOfEntriesNumericStepper" minimum="1" maximum="999" value="10"/>

		<Label text="Layout:"/>
		<PopUpButton>
			<Menu>
				<items>{testData2}</items>
			</Menu>
		</PopUpButton>
	</Container>
</Container>