<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.flyti.cocoa</groupId>
		<artifactId>cocoaAggregator</artifactId>
		<version>1.3-SNAPSHOT</version>
	</parent>

	<name>Aqua LaF Demo App</name>
	<artifactId>demo</artifactId>
	<packaging>swf</packaging>

	<dependencies>
		<dependency>
			<groupId>org.flyti.cocoa</groupId>
			<artifactId>aquaLaF</artifactId>
			<type>swc</type>
			<version>1.3-SNAPSHOT</version>
      <exclusions>
        <exclusion>
          <groupId>com.adobe.flex.framework</groupId>
          <artifactId>flex-framework</artifactId>
        </exclusion>
      </exclusions>
		</dependency>

		<dependency>
			<groupId>org.flyti.cocoa</groupId>
			<artifactId>acocoa</artifactId>
			<type>swc</type>
			<version>1.3-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.flyti.cocoa</groupId>
			<artifactId>cocoa</artifactId>
			<version>1.3-SNAPSHOT</version>
			<type>rb.swc</type>
			<classifier>en_US</classifier>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.sonatype.flexmojos</groupId>
				<artifactId>flexmojos-maven-plugin</artifactId>
				<configuration>
					<debug>true</debug>
					<sourceFile>cocoa/plaf/aqua/demo/Main.mxml</sourceFile>
          <localesCompiled>
            <locale>en_US</locale>
          </localesCompiled>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>