<ac:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns="cocoa" xmlns:ac="acocoa" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:aqua="cocoa.plaf.aqua.*" xmlns:tableview="cocoa.tableView.*">
  <fx:Script><![CDATA[
    import cocoa.Insets;
    import cocoa.plaf.TextFormatID;
    import cocoa.tableView.TableColumn;
    import cocoa.tableView.TextTableColumn;
    import cocoa.text.TextLineRendererFactory;

    override protected function preInitialize():void {
      var textLineRendererFactory:TextLineRendererFactory = new TextLineRendererFactory(laf.getTextFormat(TextFormatID.SMALL_SYSTEM));
      tableView.dataSource = new DemoTableViewDataSource(laf);
      var insets:Insets = new Insets(2, NaN, NaN, 3);
      var firstColumn:TextTableColumn = new TextTableColumn('a', textLineRendererFactory, tableView, insets);
      firstColumn.width = 120;
      tableView.columns = new <TableColumn>[firstColumn, new TextTableColumn('b', textLineRendererFactory, tableView, insets)];
    }
    ]]></fx:Script>
  <ac:laf>
    <aqua:AquaLookAndFeel/>
  </ac:laf>

  <Container height="200">
    <layout>
      <s:HorizontalLayout/>
    </layout>
    <tableview:TableView id="tableView" width="100%" height="200" lafSubkey="small"/>
  </Container>
</ac:WindowedApplication>