<?xml version="1.0" ?>
<Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns="cocoa" xmlns:s="library://ns.adobe.com/flex/spark">
	<fx:Metadata>
		[HostComponent("cocoa.message.ApplicationNotification")]
	</fx:Metadata>
	<s:Rect left="0" right="0" top="0" bottom="0" radiusX="4" radiusY="4">
		<s:stroke>
			<s:SolidColorStroke color="0x929292" weight="1"/>
		</s:stroke>
	</s:Rect>

	<s:Rect id="background" left="1" top="1" right="1" bottom="1" radiusX="4" radiusY="4">
        <s:fill>
            <s:SolidColor color="0xfad8d7" id="backgroundFill"/>
        </s:fill>
    </s:Rect>

	<ScrollView left="2" right="2" top="2" bottom="2" width="400" height="300">
		<EditableTextView id="textDisplay"/>
	</ScrollView>
</Skin>