<?xml version="1.0" ?>
<EventMap xmlns="http://mate.asfusion.com" xmlns:fx="http://ns.adobe.com/mxml/2009">
	<fx:Script><![CDATA[
		import com.asfusion.mate.events.UnhandledFaultEvent;
		]]></fx:Script>

	<fx:Declarations>
		<EventHandlers type="{ApplicationErrorEvent.APPLICATION_ERROR}">
			<MethodInvoker role="{ApplicationMessageManager}" method="show" arguments="{event}"/>
		</EventHandlers>
		<EventHandlers type="{UnhandledFaultEvent.FAULT}">
			<EventAnnouncer role="{ApplicationErrorEvent}" type="{ApplicationErrorEvent.APPLICATION_ERROR}" constructorArguments="{['server error', event]}"/>
		</EventHandlers>
	</fx:Declarations>
</EventMap>